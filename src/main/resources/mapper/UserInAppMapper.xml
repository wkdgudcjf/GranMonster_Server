<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ronaldo.mapper.UserInAppMapper">
	<insert id="registUserInApp" parameterType="UserInAppVo">
       	INSERT INTO UserInApp 
       	(userID,appID)
       	VALUES
       	(#{userID},#{appID})
    </insert>
    <select id="getUserInApp" parameterType="UserInAppVo" resultType="UserInAppVo">
        SELECT * FROM UserInApp WHERE appID = #{appID} AND userID = #{userID}
    </select>
    <select id="getUserInAppByUserID" parameterType="int" resultType="UserInAppVo">
     	SELECT * FROM UserInApp natural join App WHERE userID = #{userID}
    </select>
</mapper>