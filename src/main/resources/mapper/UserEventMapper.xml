<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ronaldo.mapper.UserEventMapper">
	<insert id="registUserEvent" parameterType="UserEventVo">
       	INSERT INTO UserEvent 
       	(userID,appEventID)
       	VALUES
       	(#{userID},#{appEventID})
    </insert>
     <update id="updateUserEvent" parameterType="UserEventVo">
		UPDATE UserEvent
		set userID = #{userID},appEventID = #{appEventID},userEventEnable = #{userEventEnable}
		where userEventID = #{userEventID}
    </update> 
    <select id="getUserEventList" parameterType="int" resultType="UserEventVo">
        SELECT * FROM UserEvent WHERE userID = #{userID}
    </select>
       <select id="getUserEvent" parameterType="UserEventVo" resultType="UserEventVo">
        SELECT * FROM UserEvent WHERE userID = #{userID} and appEventID = #{appEventID}
    </select>
</mapper>