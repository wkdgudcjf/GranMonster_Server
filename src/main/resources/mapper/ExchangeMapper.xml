<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ronaldo.mapper.ExchangeMapper">
 	<select id="getExchange" parameterType="int" resultType="ExchangeVo">
        SELECT * FROM Exchange WHERE exchangeID = #{exchangeID}
    </select>
    <select id="getExchangeList" resultType="ExchangeVo">
        SELECT * FROM Exchange
    </select>
    <select id="getEnableExchangeList"  parameterType="boolean" resultType="ExchangeVo">
        SELECT * FROM Exchange WHERE exchangeEnable = #{exchangeEnable}
    </select>
    <insert id="registExchange" parameterType="ExchangeVo">
       	INSERT INTO Exchange (exchangeMoney,exchangeCoin,exchangeName,exchangeImagePath)
       	VALUES (#{exchangeMoney},#{exchangeCoin},#{exchangeName},#{exchangeImagePath})
    </insert>
	<delete id="deleteExchange" parameterType="int">
       DELETE FROM Exchange WHERE exchangeID = #{exchangeID} 
    </delete>
    <update id="updateExchange" parameterType="ExchangeVo">
		UPDATE Exchange
		set exchangeMoney = #{exchangeMoney},exchangeCoin = #{exchangeCoin},exchangeEnable = #{exchangeEnable}
		,exchangeName = #{exchangeName},exchangeImagePath = #{exchangeImagePath}
		where exchangeID = #{exchangeID}
    </update>
</mapper>