<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ronaldo.mapper.AuthUserMapper">
    <select id="searchUser" parameterType="String" resultType="AuthUserVo">
       SELECT * FROM AuthUser WHERE id = #{id}
     </select>
      <delete id="deleteUser" parameterType="String">
       DELETE FROM AuthUser WHERE id = #{id} 
      </delete> 
      <insert id="createUser" parameterType="AuthUserVo">
      INSERT INTO AuthUser (id, password, email, auth) VALUES (#{id}, #{password}, #{email}, #{auth})
     </insert>
